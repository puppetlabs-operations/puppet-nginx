<%# Configuration fragment for logging %>

<% 
@access_logs.each { |name, type| 
  out_name = name.sub '{name}', @srvname
-%>
  access_log  /var/log/nginx/<%= out_name %> <%= type %>;
<% } -%>

<% 
@error_logs.each { |name, type| 
  out_name = name.sub '{name}', @srvname
-%>
  error_log   /var/log/nginx/<%= out_name %> <%= type %>;
<% } -%>
